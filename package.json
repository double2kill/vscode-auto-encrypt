{
    "name": "auto-encrypt",
    "displayName": "auto-encrypt",
    "description": "auto encrypt/decrypt file",
    "version": "0.0.3",
    "publisher": "double2kill",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "repository": {
        "type": "git",
        "url": "https://github.com/double2kill/vscode-auto-encrypt"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "auto-encrypt config",
            "properties": {
                "auto-encrypt.password": {
                    "type": "string",
                    "default": "123456",
                    "description": "set your auto-encrypt password"
                }
            }
        },
        "commands": [
            {
                "command": "auto-encrypt.encrypt",
                "title": "encrypt current file"
            },
            {
                "command": "auto-encrypt.decrypt",
                "title": "decrypt current file"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "@types/ramda": "^0.25.49",
        "encryptjs": "^2.0.0",
        "ramda": "^0.26.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "crypto-js": "^3.1.9-1",
        "event-stream": "^3.3.4"
    }
}
